// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String        @id @default(uuid())
  createdAt    DateTime      @default(now())
  name         String
  email        String        @unique
  clients      Client[]
  appointments Appointment[]
  transactions Transaction[]
}

model Client {
  id           String        @id @default(uuid())
  name         String
  phone        String?       @unique
  email        String?       @unique
  notes        String?
  customFields Json?
  user         User          @relation(fields: [userId], references: [id])
  userId       String
  appointments Appointment[]
  transaction  Transaction[]
}

enum RepetitionSpan {
  DAY
  WEEK
  MONTH
  YEAR
}

model Appointment {
  id           String          @id @default(uuid())
  createdAt    DateTime        @default(now())
  startDate    DateTime
  endDate      DateTime?
  startTime    DateTime
  endTime      DateTime
  reSpan       RepetitionSpan?
  rePeriod     Int?
  price        Int
  confirmed    Boolean
  notes        String?
  transactions Transaction[]
  client       Client          @relation(fields: [clientId], references: [id])
  user         User            @relation(fields: [userId], references: [id])
  clientId     String
  userId       String
}

model Transaction {
  id           String        @id @default(uuid())
  createdAt    DateTime      @default(now())
  timestamp    DateTime
  amount       Int
  notes        String?
  appointments Appointment[]
  client       Client        @relation(fields: [clientId], references: [id])
  user         User          @relation(fields: [userId], references: [id])
  clientId     String
  userId       String
}
